{
  "name": "smart-contract-watch",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Neufund/smart-contract-watch.git",
  "author": "",
  "description": "Smart-Contract-Watch a service that watches smart contracts in the block chain and the transactions they conduct",
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/babel  ./src --experimental --source-maps-inline -d ./dist",
    "start": "(cp -n .env.example .env || true) & ./node_modules/.bin/babel  ./src --experimental --source-maps-inline -d ./dist && node ./dist ",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "test": "(cp -n .env.example .env || true) & mocha --compilers js:babel-core/register 'test/**/*.spec.js?(x)'",
    "coverage": "(cp -n .env.example .env || true) & nyc mocha --compilers js:babel-core/register 'test/**/*.spec.js?(x)'"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.7.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.0"
  },
  "dependencies": {
    "abi-decoder": "^1.0.8",
    "commander": "^2.11.0",
    "dotenv": "^4.0.0",
    "request": "^2.82.0",
    "request-promise": "^4.2.1",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "web3": "0.19.0",
    "winston": "2.3.1"
  }
}
